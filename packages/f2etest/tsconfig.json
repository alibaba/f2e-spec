{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "rive/globals", "vitest/globals"],
    "lib": ["esnext"],
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": [".rive", "build", "coverage", "dist", "node_modules"]
}
