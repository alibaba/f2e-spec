{
  "name": "f2e-spec",
  "private": true,
  "description": "Alibaba Front-end Specification",
  "homepage": "https://github.com/alibaba/f2e-spec#readme",
  "bugs": {
    "url": "https://github.com/alibaba/f2e-spec/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alibaba/f2e-spec.git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "rive build",
    "build:watch": "rive build --watch",
    "deploy": "gh-pages -d build",
    "lint": "eslint .",
    "lint:fix": "prettier --write . && eslint --fix .",
    "prepare": "husky && cd packages/eslint-config-ali && pnpm build",
    "start": "rive start",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{cjs,cts,js,jsx,mjs,mts,ts,tsx,vue}": "eslint --fix",
    "*.{cjs,css,cts,html,js,json,jsx,less,md,mjs,mts,scss,ts,tsx,vue,yaml,yml}": "prettier --write"
  },
  "prettier": "prettier-config-ali",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@mdx-js/react": "^3.1.0",
    "@types/node": "^20.17.31",
    "@vitest/ui": "^3.1.2",
    "eslint": "^9.25.1",
    "eslint-config-ali": "^16.1.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "prettier-config-ali": "^1.3.2",
    "react": "^18.3.1",
    "react-doc-ui": "^2.3.3",
    "react-dom": "^18.3.1",
    "rive": "^3.1.2",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  },
  "rive": {
    "doc": {
      "title": "Alibaba Front-end Specification",
      "basename": "/f2e-spec/",
      "root": "docs",
      "languages": [
        {
          "code": "en",
          "name": "English"
        },
        {
          "code": "zh",
          "name": "中文"
        }
      ]
    },
    "template": "node"
  }
}
